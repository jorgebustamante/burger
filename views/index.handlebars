<div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-6 table-burger'>
        <div class="card-transparent">
            <div class="card-body table-card">
                <h3 class="card-title">Tasks to-do</h3>
                <table class="table table-hover table-borderless">
                    <tbody>
                            {{#each burger}}
                            {{#unless devoured}}
                            {{>burger/burger-partials devour = true}}
                            {{/unless}}
                            {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class='col-sm-12 col-md-8 col-lg-5 table-burger'>
        <div class="card-transparent">
            <div class="card-body table-card">
                <h3 class="card-title">Tasks Completed</h3>
                <table class="table table-hover table-borderless">
                    <tbody>
                            {{#each burger}}
                            {{#if devoured}}
                            {{> burger/burger-partials devour=false}}
                            {{/if}}
                            {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class='col-sm-12 col-md-3 col-lg-3 table-burger'>
    </div>
</div>

<div class='row' id="add">
    <div class='col-12' id="add-col">
        <div class="form-group">
            <h3>Enter New Task</h3>
            <label for="bur">Task:</label>
            <input type="text" id="bur" name="name">
            <button class='add-btn btn-primary' id="order-btn">Add new task</button>
        </div>
    </div>
</div>